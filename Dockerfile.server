FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY server/package*.json ./
RUN npm ci --only=production

# Copy source code
COPY server/src/ ./src/
COPY server/tsconfig.json ./

# Install TypeScript and build
RUN npm install -g typescript && \
    tsc

# Expose the port
EXPOSE 4000

# Start the server
CMD ["node", "dist/index.js"]
